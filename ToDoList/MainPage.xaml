<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoList.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackLayout x:Name="taskList" Grid.Row="0">
            <!-- Existing labels will go here -->
        </StackLayout>

        <Grid Grid.Row="1" Margin="0,0,0,20" VerticalOptions="EndAndExpand">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Entry x:Name="taskEntry" Placeholder="Enter task" Grid.Column="0" HorizontalOptions="FillAndExpand" />

            <Button Text="Create Task" Clicked="OnCreateTaskClicked" 
                    Grid.Column="1" WidthRequest="130" 
                    HorizontalOptions="Start" VerticalOptions="Center" />
        </Grid>


    </Grid>

    <!-- 
    <Button Text="Create Task" Clicked="OnCreateTaskClicked" 
        Grid.Row="1" HorizontalOptions="Center" Margin="0,0,0,20"/>
       -->


</ContentPage>